<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/media3_controller"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/vibrant_magenta"
    android:padding="4dp">
<androidx.media3.ui.DefaultTimeBar
android:id="@+id/exo_progress"
android:layout_width="match_parent"
android:layout_height="26dp"
    android:layout_gravity="end"
app:scrubber_color="@color/pale_magenta"
app:played_color="@color/vibrant_yellow"
app:buffered_color="@color/pale_yellow"
app:unplayed_color="@color/dark_gray" />
    </FrameLayout>
